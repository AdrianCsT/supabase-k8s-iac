# Default: normalize all text files to LF
* text=auto eol=lf

# --- Python ---
*.py      text eol=lf
*.pyi     text eol=lf

# --- Bash / Shell ---
*.sh      text eol=lf
*.bash    text eol=lf

# --- Terraform / CDKTF ---
*.tf      text eol=lf
*.tfvars  text eol=lf
*.json    text eol=lf
*.ts      text eol=lf
*.js      text eol=lf
*.cjs     text eol=lf
*.mjs     text eol=lf

# --- Config / Data ---
*.yml     text eol=lf
*.yaml    text eol=lf
*.toml    text eol=lf
*.ini     text eol=lf
*.env     text eol=lf
*.md      text eol=lf
*.txt     text eol=lf

# --- Windows-specific scripts (keep CRLF) ---
*.bat     text eol=crlf
*.cmd     text eol=crlf
*.ps1     text eol=crlf

# --- Binary files (no EOL conversion) ---
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.zip     binary
*.tar.gz  binary
*.tgz     binary
*.pdf     binary
